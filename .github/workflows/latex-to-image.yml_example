name: LaTeX to Image

#  Pushen im Job erlauben <<<
permissions:
  contents: write

on:
  push:
    branches:
      - main
  pull_request:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      # 1) Repo auschecken + Credentials persistent halten
      - name: Checkout repository
        uses: actions/checkout@v2
        with:
          token: ${{ secrets.GITHUB_TOKEN }}
          persist-credentials: true

      # 2) Python einrichten
      - name: Set up Python
        uses: actions/setup-python@v2
        with:
          python-version: '3.x'

      # 3) Dependencies installieren
      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install markdown2
          sudo apt-get update
          sudo apt-get install -y texlive-latex-base texlive-fonts-recommended texlive-fonts-extra texlive-latex-extra dvipng

      # 4) LaTeX -> Image Script ausführen
      - name: Run LaTeX to Image script
        run: python scripts/latex_to_image.py

      # 5) Pullen, um evtl. Konflikte zu vermeiden (optional, aber empfohlen)
      - name: Pull latest changes
        run: |
          git pull --rebase origin $GITHUB_REF_NAME

      # 6) Änderungen committen & pushen
      - name: Commit and push changes
        run: |
          git config user.name "github-actions"
          git config user.email "github-actions@github.com"
          git add .
          # Verhindert Abbruch, wenn keine Änderungen vorliegen:
          git commit -m "Convert LaTeX to images" || echo "No changes to commit"
          git push origin HEAD:$GITHUB_REF_NAME
        env:
          # Hier das GITHUB_TOKEN mitgeben
          GITHUB_TOKEN: ${{ secrets.ACTIONS_DEPLOY_KEY }}
